{
  "version": 3,
  "configurePresets": [
    {
      "name": "base",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/base",
      "environment": { "CC": "clang-19", "CXX": "clang++-19" },
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang-19",
        "CMAKE_CXX_COMPILER": "clang++-19",
        "CMAKE_CXX_STANDARD": "23",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON",
        "CMAKE_CXX_EXTENSIONS": "OFF",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_CXX_FLAGS": "-stdlib=libc++",
        "CMAKE_EXE_LINKER_FLAGS": "-fuse-ld=lld -stdlib=libc++",
        "CMAKE_CXX_CLANG_TIDY": "clang-tidy-19;-extra-arg=-std=c++23;-extra-arg=-stdlib=libc++"
      }
    },
    {
      "name": "libcxx",
      "inherits": "base",
      "binaryDir": "${sourceDir}/build/libcxx",
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-stdlib=libc++",
        "CMAKE_EXE_LINKER_FLAGS": "-stdlib=libc++"
      }
    },
    {
      "name": "asan",
      "inherits": "libcxx",
      "binaryDir": "${sourceDir}/build/asan",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_FLAGS": "-stdlib=libc++ -fsanitize=address,undefined -fno-omit-frame-pointer -g",
        "CMAKE_EXE_LINKER_FLAGS": "-stdlib=libc++ -fsanitize=address,undefined"
      }
    },
    {
      "name": "tsan",
      "inherits": "libcxx",
      "binaryDir": "${sourceDir}/build/tsan",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_FLAGS": "-stdlib=libc++ -fsanitize=thread -fno-omit-frame-pointer -g",
        "CMAKE_EXE_LINKER_FLAGS": "-stdlib=libc++ -fsanitize=thread"
      }
    },
    {
      "name": "release",
      "inherits": "libcxx",
      "binaryDir": "${sourceDir}/build/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_FLAGS": "-stdlib=libc++ -O3 -march=native -DNDEBUG",
        "CMAKE_EXE_LINKER_FLAGS": "-stdlib=libc++"
      }
    },
    {
      "name": "bench",
      "inherits": "release",
      "binaryDir": "${sourceDir}/build/bench",
      "cacheVariables": {
        "SYSTEMS_DSA_BUILD_BENCHMARKS": "ON",
        "SYSTEMS_DSA_BUILD_TESTS": "OFF"
      }
    }

  ],
  "buildPresets": [
    { "name": "base", "configurePreset": "base" },
    { "name": "libcxx", "configurePreset": "libcxx" },
    { "name": "asan", "configurePreset": "asan" },
    { "name": "tsan", "configurePreset": "tsan" },
    { "name": "release", "configurePreset": "release" },
    { "name":  "bench", "configurePreset":  "bench"}
  ],
  "testPresets": [
    { "name": "asan", "configurePreset": "asan" },
    { "name": "tsan", "configurePreset": "tsan" },
    { "name": "release", "configurePreset": "release" }
  ]
}
